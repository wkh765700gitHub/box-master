<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <com.ocnyang.qbox.app.widget.FourThreeImageView
        android:id="@+id/img_wechat_style"
        android:layout_width="match_parent"
        android:transitionName="@string/transition_wechat_img"
        android:layout_height="300dp"
        android:src="@drawable/morenimg"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/title_wechat_style2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/bg_text_wechat_item"
        android:ellipsize="end"
        android:paddingBottom="7dp"
        android:lines="1"
        android:textSize="12sp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="7dp"
        android:textColor="@android:color/white"/>

</FrameLayout>